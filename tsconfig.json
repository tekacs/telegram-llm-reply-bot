{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",

    "resolveJsonModule": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,

    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
